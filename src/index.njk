{% hero %}
  <h1 class="font-medium">Hey, I'm Will&nbsp;üëã</h1>
  <p class="mt-4 text-lg leading-snug md:text-xl md:leading-relaxed max-w-prose">I study computer science at <a class="underline hover:bg-princeton focus:bg-princeton" href="https://www.princeton.edu/">Princeton&nbsp;University</a>. The Web is my hometown, and I love using code to make new things.</p>
{% endhero %}
{% sectionContainer "Latest Posts" %}
  {% cardContainer %}
    {% for post in collections.posts | head(-3) | reverse %}
    {% card 
      post.url | url,
      "h3", 
      post.data.title, 
      post.date | htmlDateString, 
      post.date | readableDate, 
      post.data.description, 
      post.data.tags | filterTagList
    %}
    {% endfor %}
  {% endcardContainer %}
  <p class="mt-8 text-right"><a class="text-xl font-medium hover:text-primary focus:text-primary dark:hover:text-primary-light dark:focus:text-primary-light" href="{{ '/posts/' | url }}">See All Posts ‚Üí</a></p>
{% endsectionContainer %}
{% sectionContainer "Featured Projects" %}
  {% cardContainer %}
    {% for project in collections.projects | filterInCollection(collections.featured) | reverse %}
    {% card 
      project.url | url, 
      "h3", 
      project.data.title, 
      project.date | dateYear, 
      project.date | dateYear, 
      project.data.description, 
      project.data.tags | filterTagList
    %}
    {% endfor %}
  {% endcardContainer %}
  <p class="mt-8 text-right"><a class="text-xl font-medium hover:text-primary focus:text-primary dark:hover:text-primary-light dark:focus:text-primary-light" href="{{ '/projects/' | url }}">See All Projects ‚Üí</a></p>
{% endsectionContainer %}
{% sectionContainer "All Tags" %}
<ul class="flex flex-wrap max-w-xl mt-8">
  {% for tag in collections.tagList | filterTagList %}
  {% set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
  <li class="mb-2 mr-2">
    <a href="{{ tagUrl | url }}" class="inline-flex px-2 py-1 text-sm font-medium border-2 rounded-md border-primary bg-primary text-background whitespace-nowrap hover:bg-background hover:text-primary focus:bg-background focus:text-primary dark:bg-primary-dark dark:border-primary-dark dark:hover:bg-background-dark dark:hover:text-primary-dark dark:focus:bg-background-dark dark:focus:text-primary-dark dark:text-text-dark">{{ tag }}</a>
  </li>
  {% endfor %}
</ul>
{% endsectionContainer %}
