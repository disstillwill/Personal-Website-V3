{% hero %}
  <h1 class="font-medium">Hey, I'm Will&nbspüëã</h1>
  <p class="mt-4 text-lg leading-snug lg:text-xl lg:leading-relaxed max-w-prose">I study computer science at <a class="underline hover:bg-yellow-500 focus:bg-yellow-500" href="https://www.princeton.edu/">Princeton&nbspUniversity</a>. The Web is my hometown, and I love using code to make new things.</p>
{% endhero %}
{% sectionContainer "Latest Posts" %}
  {% cardContainer %}
    {% for post in collections.posts | head(-3) | reverse %}
    {% card 
      post.url | url,
      "h3", 
      post.data.title, 
      post.date | htmlDateString, 
      post.date | readableDate, 
      post.data.description, 
      post.data.tags | filterTagList
    %}
    {% endfor %}
  {% endcardContainer %}
  <p class="mt-8 text-right"><a class="text-xl font-medium hover:text-blue-600 focus:text-blue-600 dark:hover:text-indigo-700 dark:focus:text-indigo-700" href="{{ '/posts/' | url }}">See All Posts ‚Üí</a></p>
{% endsectionContainer %}
{% sectionContainer "Featured Projects" %}
  {% cardContainer %}
    {% for project in collections.projects | filterInCollection(collections.featured) | reverse %}
    {% card 
      project.url | url, 
      "h3", 
      project.data.title, 
      project.date | dateYear, 
      project.date | dateYear, 
      project.data.description, 
      project.data.tags | filterTagList
    %}
    {% endfor %}
  {% endcardContainer %}
  <p class="mt-8 text-right"><a class="text-xl font-medium hover:text-blue-600 focus:text-blue-600 dark:hover:text-indigo-700 dark:focus:text-indigo-700" href="{{ '/projects/' | url }}">See All Projects ‚Üí</a></p>
{% endsectionContainer %}
{% sectionContainer "All Tags" %}
<ul class="flex flex-wrap max-w-xl mt-8">
  {% for tag in collections.tagList | filterTagList %}
  {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
  <li class="mb-2 mr-2">
    <a href="{{ tagUrl | url }}" class="inline-flex px-2 py-1 text-sm font-medium bg-blue-600 border-2 border-blue-600 rounded-md text-gray-50 whitespace-nowrap hover:bg-gray-50 hover:text-blue-600 focus:bg-gray-50 focus:text-blue-600 dark:bg-indigo-700 dark:border-indigo-700 dark:hover:bg-gray-900 dark:hover:text-indigo-700 dark:focus:bg-gray-900 dark:focus:text-indigo-700">{{ tag }}</a>
  </li>
  {% endfor %}
</ul>
{% endsectionContainer %}
