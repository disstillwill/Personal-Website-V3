<header class="flex flex-col max-w-screen-xl px-6 py-8 lg:flex-row lg:items-center lg:mx-auto">
    <div class="inline-flex items-center">
        <a class="text-3xl font-medium hover:text-blue-600 focus:text-blue-600 dark:hover:text-indigo-700 dark:focus:text-indigo-700" href="{{ '/' | url }}">William Svoboda</a>
        <button class="w-8 h-8 ml-4" onclick="toggleDark()" aria-label="Toggle Dark Mode">
            <svg xmlns='http://www.w3.org/2000/svg' class='fill-current' viewBox='0 0 512 512' aria-hidden='true'>
                <path d='M234 26h44v92h-44zM234 394h44v92h-44zM338.025 142.857l65.054-65.054 31.113 31.113-65.054 65.054zM77.815 403.074l65.054-65.054 31.113 31.113-65.054 65.054zM394 234h92v44h-92zM26 234h92v44H26zM338.029 369.14l31.112-31.113 65.054 65.054-31.112 31.112zM77.802 108.92l31.113-31.113 65.054 65.054-31.113 31.112zM256 358a102 102 0 11102-102 102.12 102.12 0 01-102 102z'/>
            </svg>
        </button>
    </div>
    <nav class="flex mt-4 space-x-4 overflow-x-auto lg:ml-auto lg:mt-0 lg:space-x-6">
        {%- for entry in collections.all | eleventyNavigation %}
        <a class="font-medium whitespace-nowrap text-lg hover:text-blue-600 focus:text-blue-600 dark:hover:text-indigo-700 dark:focus:text-indigo-700 {{ 'underline' if (entry.url in page.url and entry.url != '/') or (entry.url == page.url) }}" href="{{ entry.url | url }}">{{ entry.title }}</a>
        {%- endfor %}
    </nav>
</header>
