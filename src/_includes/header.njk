<header class="flex flex-col max-w-screen-xl px-6 py-8 lg:flex-row lg:items-center lg:mx-auto">
    <div class="inline-flex items-center">
        <a class="text-3xl font-medium hover:text-primary focus:text-primary dark:hover:text-primary-dark dark:focus:text-primary-dark"
            href="{{ '/' | url }}">William Svoboda</a>
        <button class="w-8 h-8 ml-4" onclick="toggleDark()" aria-label="Toggle Dark Mode">
            <svg xmlns='http://www.w3.org/2000/svg' class='fill-current' viewBox='0 0 512 512' aria-hidden='true'
                id='light-icon'>
                <path
                    d='M234 26h44v92h-44zM234 394h44v92h-44zM338.025 142.857l65.054-65.054 31.113 31.113-65.054 65.054zM77.815 403.074l65.054-65.054 31.113 31.113-65.054 65.054zM394 234h92v44h-92zM26 234h92v44H26zM338.029 369.14l31.112-31.113 65.054 65.054-31.112 31.112zM77.802 108.92l31.113-31.113 65.054 65.054-31.113 31.112zM256 358a102 102 0 11102-102 102.12 102.12 0 01-102 102z' />
            </svg>
            <svg xmlns='http://www.w3.org/2000/svg' class='hidden fill-current' viewBox='0 0 512 512' aria-hidden='true'
                id='dark-icon'>
                <path
                    d='M152.62 126.77c0-33 4.85-66.35 17.23-94.77C87.54 67.83 32 151.89 32 247.38 32 375.85 136.15 480 264.62 480c95.49 0 179.55-55.54 215.38-137.85-28.42 12.38-61.8 17.23-94.77 17.23-128.47 0-232.61-104.14-232.61-232.61z' />
            </svg>
        </button>
    </div>
    <nav class="flex items-center mt-4 space-x-4 overflow-x-auto lg:ml-auto lg:mt-0 lg:space-x-6">
        {%- for entry in collections.all | eleventyNavigation %}
        <a class="font-medium whitespace-nowrap text-lg hover:text-primary focus:text-primary dark:hover:text-primary-dark dark:focus:text-primary-dark {{ 'underline' if (entry.url in page.url and entry.url != '/') or (entry.url == page.url) }}"
            href="{{ entry.url | url }}">{{ entry.title }}</a>
        {%- endfor %}
        <a class="flex-shrink-0 w-6 h-6" href="{{ metadata.repo_base_url }}{{ page.inputPath }}">
            <svg viewBox="0 0 16 16" xmlns="http://www.w3.org/2000/svg" class="fill-current" fill-rule="evenodd" clip-rule="evenodd" stroke-linejoin="round" stroke-miterlimit="1.414">
                <path d="M8 0C3.58 0 0 3.582 0 8c0 3.535 2.292 6.533 5.47 7.59.4.075.547-.172.547-.385 0-.19-.007-.693-.01-1.36-2.226.483-2.695-1.073-2.695-1.073-.364-.924-.89-1.17-.89-1.17-.725-.496.056-.486.056-.486.803.056 1.225.824 1.225.824.714 1.223 1.873.87 2.33.665.072-.517.278-.87.507-1.07-1.777-.2-3.644-.888-3.644-3.953 0-.873.31-1.587.823-2.147-.09-.202-.36-1.015.07-2.117 0 0 .67-.215 2.2.82.64-.178 1.32-.266 2-.27.68.004 1.36.092 2 .27 1.52-1.035 2.19-.82 2.19-.82.43 1.102.16 1.915.08 2.117.51.56.82 1.274.82 2.147 0 3.073-1.87 3.75-3.65 3.947.28.24.54.73.54 1.48 0 1.07-.01 1.93-.01 2.19 0 .21.14.46.55.38C13.71 14.53 16 11.53 16 8c0-4.418-3.582-8-8-8"/>
