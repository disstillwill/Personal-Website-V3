---
layout: base.njk
title: All Posts
permalink: /posts/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}
eleventyNavigation:
  key: ðŸ“š Posts
  order: 1
pagination:
  data: collections.posts
  size: 4
  reverse: true
  alias: posts
---
{% hero %}
  <h1 class="sm:text-center">{{ title }}</h1>
{% endhero %}
<div class="max-w-screen-xl px-6 mx-auto">
  {% cardContainer %}
    {%- for post in posts %}
    {% card 
      post.url | url, 
      "h2", 
      post.data.title, 
      post.date | htmlDateString, 
      post.date | readableDate, 
      post.data.description, 
      post.data.tags | filterTagList
    %}
    {% endfor -%}
  {% endcardContainer %}
</div>
{% include "pagination.njk" %}
